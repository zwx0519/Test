<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/create_room_con"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFEB3B"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_update_live_room_return"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_arrow_lt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_update_live_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX的直播间"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/mLl_update_live_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/create_room_con">

        <EditText
            android:id="@+id/et_update_live_room_newname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="修改的房间名" />

        <EditText
            android:id="@+id/et_update_live_room_roomid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="修改的房间id" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_update_live_room_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="修改的房间背景图地址" />
            <ImageView
                android:id="@+id/iv_update_live_room_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/icon_phono" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_update_live_room_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="修改的房间直播标题" />

        <Button
            android:id="@+id/btn_update_live_room_ok"
            android:text="确定修改"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:background="@color/Jiured"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>