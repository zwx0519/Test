<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Home_Text">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="channel">
        <item name="android:layout_width">@dimen/dp_35</item>
        <item name="android:layout_height">@dimen/dp_35</item>
    </style>

    <style name="text">
        <item name="android:layout_width">@dimen/dp_35</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="brand">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dp_20</item>
    </style>

    <style name="special_btn">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/dp_16</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/select_special_btn_color</item>
        <item name="android:layout_height">@dimen/dp_50</item>
    </style>

    <style name="carText">
        <item name="android:textColor">#B5000000</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="carText1">
        <item name="android:textColor">#B5000000</item>
        <item name="android:textSize">@dimen/sp_22</item>
    </style>

    <style name="HomeDetail_30txt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="address_add_txt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_60</item>
        <item name="title_textsize">@dimen/dp_22</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>